<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:dtbook="http://www.daisy.org/z3986/2005/dtbook/"
               xmlns="http://www.daisy.org/z3986/2005/dtbook/"
               stylesheet="../../main/resources/xml/pre-processing.xsl">
    
    <x:scenario label="automatically give number to noterefs that are not already numbered">
        <x:context>
            <div>
                <noteref>1</noteref>
                <noteref>2</noteref>
                <noteref>3</noteref>
                <noteref>*</noteref>
                <noteref>*</noteref>
                <noteref>*</noteref>
            </div>
        </x:context>
        
        <x:expect>
            <div>
                <noteref>1</noteref>
                <noteref>2</noteref>
                <noteref>3</noteref>
                <noteref>4</noteref>
                <noteref>5</noteref>
                <noteref>6</noteref>
            </div>
        </x:expect>
    </x:scenario>
    
    <x:scenario label="automatically give number to notes that are not already numbered">
        <x:context>
            <div>
                <note>
                    <p>* lorem ipsum</p>
                    <p>* lorem ipsum</p>
                    <p>* lorem ipsum</p>
                </note>
                <note>
                    <p>* lorem ipsum</p>
                    <p>* lorem ipsum</p>
                    <p>* lorem ipsum</p>
                </note>
                <note>
                    <p>* lorem ipsum</p>
                    <p>* lorem ipsum</p>
                    <p>* lorem ipsum</p>
                </note>
            </div>
        </x:context>
        
        <x:expect>
            <div>
                <note>
                    <p>1 lorem ipsum</p>
                    <p>* lorem ipsum</p>
                    <p>* lorem ipsum</p>
                </note>
                <note>
                    <p>2 lorem ipsum</p>
                    <p>* lorem ipsum</p>
                    <p>* lorem ipsum</p>
                </note>
                <note>
                    <p>3 lorem ipsum</p>
                    <p>* lorem ipsum</p>
                    <p>* lorem ipsum</p>
                </note>
            </div>
        </x:expect>
    </x:scenario>
    
    <x:scenario label="the precedingseparator class should be replaced with a hr element">
        <x:context>
            <div>
                <p class="other-class precedingseparator"/>
            </div>
        </x:context>
        
        <x:expect>
            <div>
                <hr/>
                <p class="other-class"/>
            </div>
        </x:expect>
    </x:scenario>
    
    <x:scenario label="the precedingemptyline class should be replaced with a hr element with a emptyline class">
        <x:context>
            <div>
                <p class="other-class precedingemptyline"/>
            </div>
        </x:context>
        
        <x:expect>
            <div>
                <hr class="emptyline"/>
                <p class="other-class"/>
            </div>
        </x:expect>
    </x:scenario>
    
    <x:scenario label="move colophon to rearmatter (with existing rearmatter)">
        <x:context>
            <book>
                <frontmatter>
                    <level1 class="cover"/>
                    <level1/>
                    <level1 class="colophon"/>
                </frontmatter>
                <bodymatter>
                    <level1/>
                </bodymatter>
                <rearmatter>
                    <level1/>
                </rearmatter>
            </book>
        </x:context>
        <x:expect>
            <book>
                <frontmatter>
                    <level1 class="cover"/>
                    <level1/>
                </frontmatter>
                <bodymatter>
                    <level1/>
                </bodymatter>
                <rearmatter>
                    <level1/>
                    <level1 class="colophon"/>
                </rearmatter>
            </book>
        </x:expect>
    </x:scenario>
    
    <x:scenario label="move colophon to rearmatter (without existing rearmatter)">
        <x:context>
            <book>
                <frontmatter>
                    <level1 class="cover"/>
                    <level1/>
                    <level1 class="colophon"/>
                </frontmatter>
                <bodymatter>
                    <level1/>
                </bodymatter>
            </book>
        </x:context>
        <x:expect>
            <book>
                <frontmatter>
                    <level1 class="cover"/>
                    <level1/>
                </frontmatter>
                <bodymatter>
                    <level1/>
                </bodymatter>
                <rearmatter>
                    <level1 class="colophon"/>
                </rearmatter>
            </book>
        </x:expect>
    </x:scenario>
    
    <x:scenario label="remove titlepage and print toc">
        <x:context>
            <frontmatter>
                <level1 class="cover"/>
                <level1 class="titlepage"/>
                <level1 class="toc"/>
                <level1 class="print_toc"/>
            </frontmatter>
        </x:context>
        <x:expect>
            <frontmatter>
                <level1 class="cover"/>
            </frontmatter>
        </x:expect>
    </x:scenario>
    
    <x:scenario label="wrap leaf sections and add classes">
        <x:context>
            <level1>
                <h1>Headline 1</h1>
                <p>Paragraph 1.</p>
                <p>Paragraph 2.</p>
                <img src="img1.jpg"/>
                <p>Paragraph 3.</p>
                <level2>
                    <h2>Headline 1.1</h2>
                    <p>Paragraph 4.</p>
                    <p>Paragraph 5.</p>
                    <img src="img2.jpg"/>
                    <p>Paragraph 6.</p>
                </level2>
                <level2>
                    <h2>Headline 1.2</h2>
                    <p>Paragraph 7.</p>
                    <p>Paragraph 8.</p>
                    <img src="img3.jpg"/>
                    <p>Paragraph 9.</p>
                    <level3>
                        <h2>Headline 1.2.1</h2>
                        <p>Paragraph 10.</p>
                        <p>Paragraph 11.</p>
                        <img src="img3.jpg"/>
                        <p>Paragraph 12.</p>
                    </level3>
                </level2>
                <p>Paragraph 13.</p>
                <p>Paragraph 14.</p>
                <level2>
                    <h2>Headline 1.3</h2>
                    <p>Paragraph 15.</p>
                    <p>Paragraph 16.</p>
                    <img src="img4.jpg"/>
                    <p>Paragraph 17.</p>
                </level2>
                <p>Paragraph 18.</p>
                <p>Paragraph 19.</p>
            </level1>
        </x:context>
        <x:expect>
            <level1>
                <div class="leaf-section">
                    <h1>Headline 1</h1>
                    <p>Paragraph 1.</p>
                    <p>Paragraph 2.</p>
                    <img src="img1.jpg"/>
                    <p>Paragraph 3.</p>
                </div>
                <level2>
                    <h2>Headline 1.1</h2>
                    <p>Paragraph 4.</p>
                    <p>Paragraph 5.</p>
                    <img src="img2.jpg"/>
                    <p>Paragraph 6.</p>
                </level2>
                <level2>
                    <div class="leaf-section">
                        <h2>Headline 1.2</h2>
                        <p>Paragraph 7.</p>
                        <p>Paragraph 8.</p>
                        <img src="img3.jpg"/>
                        <p>Paragraph 9.</p>
                    </div>
                    <level3>
                        <h2>Headline 1.2.1</h2>
                        <p>Paragraph 10.</p>
                        <p>Paragraph 11.</p>
                        <img src="img3.jpg"/>
                        <p>Paragraph 12.</p>
                    </level3>
                </level2>
                <div class="leaf-section">
                    <p>Paragraph 13.</p>
                    <p>Paragraph 14.</p>
                </div>
                <level2>
                    <h2>Headline 1.3</h2>
                    <p>Paragraph 15.</p>
                    <p>Paragraph 16.</p>
                    <img src="img4.jpg"/>
                    <p>Paragraph 17.</p>
                </level2>
                <div class="leaf-section">
                    <p>Paragraph 18.</p>
                    <p>Paragraph 19.</p>
                </div>
            </level1>
        </x:expect>
    </x:scenario>
    
</x:description>
